{
  "name": "first-follow-root",
  "private": true,
  "license": "MIT",
  "scripts": {
    "lint": "eslint ./",
    "test": "jest",
    "size": "lerna run size",
    "spell": "yaspeller-ci *.md packages/*/*.md",
    "clean": "rimraf coverage"
  },
  "devDependencies": {
    "coveralls": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2",
    "husky": "^4.2.5",
    "jest": "^26.0.0",
    "lerna": "^3.20.2",
    "lint-staged": "^10.2.2",
    "npm-run-all": "4.1.5",
    "nrun": "^1.0.0",
    "rimraf": "3.0.2",
    "yaspeller-ci": "^1.0.2"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "array-callback-return": "off",
      "consistent-return": "off",
      "no-loop-func": "off",
      "no-underscore-dangle": "off",
      "object-curly-newline": "off"
    }
  },
  "eslintIgnore": [
    "node_modules"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint",
    "*.md": "yaspeller-ci"
  },
  "yaspeller": {
    "lang": "en",
    "dictionary": [
      "CI",
      "Changelog",
      "Travis",
      "Unreleased",
      "Versioning",
      "airbnb",
      "eslint",
      "getFirstSets",
      "getFollowSets",
      "getPredictSets",
      "gzipped"
    ]
  }
}
